<div class="container">
  <h1>Write a Review for <%= @restaurant.name %></h1>

  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: (1..5) %>

    <%= f.submit 'Post Review', class: 'btn btn-info' %>
    <br>
    <br>
  <% end %>
  <%= link_to 'Go back', restaurant_path(@restaurant) %>

</div>

